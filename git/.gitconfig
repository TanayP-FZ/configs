[user]
	email = miles.frain@colorado.edu
	name = Miles Frain
[includeIf "gitdir:~/work/"]
	path = ~/work/.gitconfig
[core]
	editor = vim
	pager = less -FXR
[color]
	ui = auto
[diff]
	tool = vimdiff
	# for simple diffing with meld:
	# git diff
	# git difftool -t meld <commit> -- <file>
	guitool = meld
	submodule = log
[difftool]
	prompt = false
[alias]
	dt = difftool
	one = log --oneline --decorate
	uno = status -uno
	all = log --branches --remotes --tags --decorate --oneline --graph
	dog = log --decorate --oneline --graph
	date = for-each-ref --sort=-committerdate --format='%(refname:short)' refs/heads/
[merge]
	tool = mymeldadv
	trustexitcode = false
[mergetool "mymeld"]
	cmd = meld $LOCAL $MERGED $REMOTE
[mergetool "mymeldadv"]
	cmd = meld --diff $BASE $LOCAL --diff $BASE $REMOTE --diff $LOCAL $BASE $REMOTE --diff $LOCAL $MERGED $REMOTE
[format]
	pretty = medium
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
